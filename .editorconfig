# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# JavaScript/TypeScript
[*.{js,jsx,ts,tsx,mjs,cjs}]
indent_size = 2
indent_style = space
max_line_length = 80
quote_type = single

# JSON
[*.{json,jsonc}]
indent_size = 2
indent_style = space

# CSS/SCSS/LESS
[*.{css,scss,less}]
indent_size = 2
indent_style = space

# HTML
[*.{html,htm}]
indent_size = 2
indent_style = space

# Markdown
[*.md]
max_line_length = off
trim_trailing_whitespace = false

# YAML
[*.{yml,yaml}]
indent_size = 2
indent_style = space
