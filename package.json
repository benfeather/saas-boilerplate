{
	"name": "workspace",
	"private": true,
	"scripts": {
		"build": "turbo build",
		"dev": "turbo dev",
		"dev:web": "turbo --filter='server' --filter='web' dev",
		"db:push": "turbo --filter='@workspace/db' db:push",
		"db:studio": "turbo --filter='@workspace/db' db:studio",
		"db:generate": "turbo --filter='@workspace/db' db:generate",
		"db:migrate": "turbo --filter='@workspace/db' db:migrate",
		"db:start": "turbo --filter='@workspace/db' db:start",
		"db:watch": "turbo --filter='@workspace/db' db:watch",
		"db:stop": "turbo --filter='@workspace/db' db:stop",
		"db:down": "turbo --filter='@workspace/db' db:down",
		"auth:generate": "bunx @better-auth/cli generate --config='./packages/auth/src/index.ts' --output='./packages/db/src/schema/auth.ts' --yes "
	},
	"devDependencies": {
		"@biomejs/biome": "^2.3.8",
		"@iconify/react": "^6.0.2",
		"@tailwindcss/vite": "^4.1.17",
		"@tanstack/devtools-vite": "^0.3.12",
		"@tanstack/react-devtools": "^0.8.4",
		"@tanstack/react-form-devtools": "^0.2.5",
		"@tanstack/react-query-devtools": "^5.91.1",
		"@tanstack/react-router-devtools": "^1.140.1",
		"@types/bun": "^1.3.4",
		"@types/node": "^24.10.3",
		"@types/pg": "^8.16.0",
		"@types/react": "^19.2.7",
		"@types/react-dom": "^19.2.3",
		"@vitejs/plugin-react": "^5.1.2",
		"drizzle-kit": "^0.31.8",
		"turbo": "^2.6.3",
		"typescript": "^5.9.3",
		"vite": "^7.2.7",
		"vite-tsconfig-paths": "^5.1.4"
	},
	"packageManager": "bun@1.3.4",
	"workspaces": [
		"apps/*",
		"packages/*"
	],
	"dependencies": {
		"@hono/trpc-server": "^0.4.1",
		"@polar-sh/better-auth": "^1.6.1",
