{
	"name": "workspace",
	"private": true,
	"packageManager": "bun@1.3.4",
	"scripts": {
		"build": "turbo build",
		"check": "turbo check",
		"dev": "turbo dev",
		"db:push": "turbo --filter='@workspace/db' db:push",
		"db:studio": "turbo --filter='@workspace/db' db:studio",
		"db:generate": "turbo --filter='@workspace/db' db:generate",
		"db:generate:auth": "bunx --bun @better-auth/cli@latest generate --config='./packages/auth/src/index.ts' --output='./packages/db/src/schema/_auth.ts' --yes",
		"db:migrate": "turbo --filter='@workspace/db' db:migrate",
		"db:start": "docker compose up -d",
		"db:watch": "docker compose up",
		"db:stop": "docker compose stop",
		"db:down": "docker compose down",
		"format": "biome format --fix",
		"lint": "biome check --fix",
		"shadcn:add": "bunx --bun shadcn@latest add --cwd='./packages/common'"
	},
	"workspaces": {
		"packages": [
			"apps/*",
			"packages/*"
		],
		"catalogs": {
			"deps": {
				"@iconify/react": "^6.0.2",
				"@polar-sh/better-auth": "^1.6.1",
				"@polar-sh/sdk": "^0.41.5",
				"@tanstack/react-form": "^1.27.4",
				"@tanstack/react-query": "^5.90.12",
				"@tanstack/react-router": "^1.141.2",
				"@tanstack/react-start": "^1.141.3",
				"@tanstack/react-table": "^8.21.3",
				"@trpc/client": "^11.8.0",
				"@trpc/server": "^11.8.0",
				"@trpc/tanstack-react-query": "^11.8.0",
				"better-auth": "^1.4.7",
				"hono": "^4.11.1",
				"next-themes": "^0.4.6",
				"react": "^19.2.3",
				"react-dom": "^19.2.3",
				"tailwind-merge": "^3.4.0",
				"tailwind-variants": "^3.2.2",
				"tailwindcss": "^4.1.18",
				"tw-animate-css": "^1.4.0",
				"zod": "^4.2.1"
			},
			"dev": {
				"@tailwindcss/vite": "^4.1.18",
				"@tanstack/devtools-vite": "^0.3.12",
				"@tanstack/react-devtools": "^0.8.4",
				"@tanstack/react-form-devtools": "^0.2.7",
				"@tanstack/react-query-devtools": "^5.91.1",
				"@tanstack/react-router-devtools": "^1.141.2",
				"@vitejs/plugin-react": "^5.1.2",
				"vite": "^7.3.0",
				"vite-tsconfig-paths": "^6.0.1"
			}
		}
	},
	"devDependencies": {
		"@biomejs/biome": "^2.3.9",
		"@types/bun": "~1.3",
		"@types/node": "~24",
		"@types/pg": "^8.16.0",
		"@types/react": "^19.2.7",
		"@types/react-dom": "^19.2.3",
		"turbo": "^2.6.3",
		"typescript": "^5.9.3"
	}
}
