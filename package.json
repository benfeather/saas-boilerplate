		"@trpc/server": "^11.7.2",
		"@trpc/tanstack-react-query": "^11.7.2",
		"better-auth": "^1.4.6",
		"drizzle-orm": "^0.45.1",
		"hono": "^4.10.8",
		"pg": "^8.16.3",
		"radix-ui": "^1.4.3",
		"react": "^19.2.1",
		"react-dom": "^19.2.1",
		"tailwind-merge": "^3.4.0",
