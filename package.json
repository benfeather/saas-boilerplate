{
	"name": "workspace",
	"private": true,
	"packageManager": "bun@1.3.4",
	"scripts": {
		"build": "turbo build",
		"dev": "turbo dev",
		"dev:email": "turbo --filter='@workspace/email' dev",
		"dev:web": "turbo --filter='@workspace/server' --filter='@workspace/web' dev",
		"db:push": "turbo --filter='@workspace/db' db:push",
		"db:studio": "turbo --filter='@workspace/db' db:studio",
		"db:generate": "turbo --filter='@workspace/db' db:generate",
		"db:generate:auth": "bunx @better-auth/cli generate --config='./packages/auth/src/index.ts' --output='./packages/db/src/schema/auth.ts' --yes ",
		"db:migrate": "turbo --filter='@workspace/db' db:migrate",
		"db:start": "turbo --filter='@workspace/db' db:start",
		"db:watch": "turbo --filter='@workspace/db' db:watch",
		"db:stop": "turbo --filter='@workspace/db' db:stop",
		"db:down": "turbo --filter='@workspace/db' db:down",
		"format": "biome format --fix",
		"lint": "biome check --fix"
	},
	"workspaces": [
		"apps/*",
		"packages/*"
	],
	"dependencies": {
		"@base-ui/react": "^1.0.0",
		"@fontsource-variable/inter": "^5.2.8",
		"@hono/trpc-server": "^0.4.1",
		"@polar-sh/better-auth": "^1.6.1",
		"@polar-sh/sdk": "^0.41.5",
		"@react-email/components": "^1.0.1",
		"@react-email/tailwind": "^2.0.1",
		"@tanstack/react-form": "^1.27.3",
		"@tanstack/react-query": "^5.90.12",
		"@tanstack/react-router": "^1.141.2",
		"@tanstack/react-start": "^1.141.3",
		"@trpc/client": "^11.8.0",
		"@trpc/server": "^11.8.0",
		"@trpc/tanstack-react-query": "^11.8.0",
		"better-auth": "^1.4.6",
		"drizzle-orm": "^0.45.1",
		"hono": "^4.11.0",
		"nitro": "^3.0.1-alpha.1",
		"pg": "^8.16.3",
		"react": "^19.2.3",
		"react-dom": "^19.2.3",
		"resend": "^6.6.0",
		"shadcn": "^3.6.0",
		"tailwind-merge": "^3.4.0",
		"tailwind-variants": "^3.2.2",
		"tailwindcss": "^4.1.18",
		"zod": "^4.1.13"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.3.8",
		"@iconify/react": "^6.0.2",
		"@react-email/preview-server": "^5.0.8",
		"@tailwindcss/vite": "^4.1.18",
		"@tanstack/devtools-vite": "^0.3.12",
		"@tanstack/react-devtools": "^0.8.4",
		"@tanstack/react-form-devtools": "^0.2.6",
		"@tanstack/react-query-devtools": "^5.91.1",
		"@tanstack/react-router-devtools": "^1.141.2",
		"@types/bun": "~1.3",
		"@types/node": "~24",
		"@types/pg": "^8.16.0",
		"@types/react": "^19.2.7",
		"@types/react-dom": "^19.2.3",
		"@vitejs/plugin-react": "^5.1.2",
		"drizzle-kit": "^0.31.8",
		"react-email": "^5.0.8",
		"turbo": "^2.6.3",
		"typescript": "^5.9.3",
		"vite": "^7.2.7",
		"vite-tsconfig-paths": "^5.1.4"
	}
}
